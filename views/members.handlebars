<header>
    <div class="bold-name">OUR SAME KITCHEN</div>
    <ul id="navigation">
        <li class="nav-item"><a href="/logout">LOGOUT</a></li>
    </ul>
</header>

<div class="container">
    <div class="form-section">
        <h2 class="greeting">Welcome <span class="member-name"></span></h2>
        <h3 class="greeting"> How many meals would you like to donate?</h3>
        <form class="mealInput justify-content-center">
            <div class="form-group">
                <input type="mealCount" class="form-control" id="inputMealCount" placeholder="Meal count">
                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg1"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mb-2 submit">Submit</button>
        </form>
    </div>
    <!-- Calendly inline widget begin -->
    <div class="calendly-section">
        <h2 class="question">When would you like your donation to be picked up?</h2>
        <div class="calendly-inline-widget" data-url="https://calendly.com/theunitedrhinos/60min"
            style="min-width:320px;height:630px;">
        </div>
        <!-- Calendly inline widget end -->
        <div id="impact-div">
            <button type="submit" class="btn btn-primary mb-2" id="impact">See Your Impact</button>
        </div>
    </div>
</div>
